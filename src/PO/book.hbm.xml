<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
  
  <class name="PO.bookPO" table="book" catalog="test">
     <id name="id" type="string">
     <column name="id" length="20"/>
     <generator class="assigned"/>
     </id>
     
      <property name="picture" type="string">
      <column name="picture" length="30" not-null="true"/>
     </property>
     
     <property name="name" type="string">
      <column name="name" length="30" not-null="true"/>
     </property>
     
    <property name="author" type="string">
      <column name="author" length="30" not-null="true"/>
     </property>
     
     <property name="number" type="string">
      <column name="number" length="30" not-null="true"/>
     </property>
     
      <property name="place" type="string">
      <column name="place" length="30" not-null="true"/>
     </property>
     
     <property name="price" type="string">
      <column name="price" length="30" not-null="true"/>
     </property>
     
     
  </class>   
  </hibernate-mapping>       